<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFF"
    tools:context=".WelcomeScreen">

    <RelativeLayout
        android:id="@+id/studentLoginRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp">

        <EditText
            android:id="@+id/studentUsernamefield"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/corner_layout"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="216dp" />

        <Button
            android:id="@+id/sLoginButton"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/button_bg"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="326dp" />

        <TextView
            android:id="@+id/studentUsernameLabel"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/studentUsernamefield"
            android:layout_toStartOf="@+id/sLoginButton"
            android:text="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="231dp" />

        <TextView
            android:id="@+id/studentPasswordLabel"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="317dp" />

        <EditText
            android:id="@+id/studentPasswordfield"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_layout"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="302dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="300dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textIsSelectable="false"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/teacherButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/welcomeTextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="141dp"
        android:background="@drawable/button_bg"
        android:text="Teacher"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/studentButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/welcomeTextView"
        android:layout_alignTop="@+id/teacherButton"
        android:background="@drawable/button_bg"
        android:text="Student"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="17dp"
        android:clickable="true"
        android:text="Create New Account"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/teacherLoginRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/tLoginButton"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:background="@drawable/button_bg"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/teacherUsernamefield"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/corner_layout"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="216dp" />

        <TextView
            android:id="@+id/teacherUsernameLabel"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/teacherUsernamefield"
            android:layout_alignStart="@+id/teacherPasswordLabel"
            android:text="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="231dp" />

        <TextView
            android:id="@+id/teacherPasswordLabel"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="317dp" />

        <EditText
            android:id="@+id/teacherPasswordfield"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/corner_layout"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            tools:layout_editor_absoluteX="103dp"
            tools:layout_editor_absoluteY="302dp" />
    </RelativeLayout>

</RelativeLayout>